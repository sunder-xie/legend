{
  "manifest_version": 2,
  "name": "淘汽云修",
  "version": "0.2",
  "author": "sky",
  "description": "“淘汽云修”为相对传统的汽修企业提供“触网”的全方位解决方案",
  "icons": {
    "16": "images/icon@16.png",
    "48": "images/icon@48.png",
    "128": "images/icon@128.png"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon@16.png",
      "24": "images/icon@48.png",
      "32": "images/icon@32.png"
    },
    "default_title": "淘汽云修"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "bookmarks"
  ]
}