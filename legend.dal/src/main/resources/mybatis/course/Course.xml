<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.tqmall.legend.dao.course.CourseDao">

    <resultMap id = "BaseResultMap" type = "Course" extends = "COMMON.BASE_RESULT_MAP">
        <result column = "title" property = "title" />
        <result column = "pic" property = "pic" />
        <result column = "content" property = "content" />
        <result column = "count" property = "count" />
        <result column = "cat_id" property = "catId" />
        <result column = "sort" property = "sort" />
        <result column = "status" property = "status" />
    </resultMap>

    <sql id = "BaseColumnList">
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_COLUMN_LIST" />
            title as title,
            pic as pic,
            content as content,
            count as count,
            cat_id as catId,
            sort as sort,
            status as status,
        </trim>
    </sql>

    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "title != null">
                    and title = #{title}
                </if>
                <if test = "pic != null">
                    and pic = #{pic}
                </if>
                <if test = "content != null">
                    and content = #{content}
                </if>
                <if test = "count != null">
                    and count = #{count}
                </if>
                <if test = "catId != null">
                    and cat_id = #{catId}
                </if>
                <if test = "sort != null">
                    and sort = #{sort}
                </if>
                <if test = "status != null">
                    and status = #{status}
                </if>
                <if test = "titleLike != null">
                    and title like CONCAT('%',#{titleLike},'%')
                </if>
                <if test = "ids != null">
                    and id in(
                    <foreach collection="ids" item="tag" separator=",">
                        #{tag}
                    </foreach>
                    )
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <trim suffix="" suffixOverrides=",">
                <include refid = "COMMON.BASE_UPDATE_SET" />
                <if test = "title != null">
                    title = #{title},
                </if>
                <if test = "pic != null">
                    pic = #{pic},
                </if>
                <if test = "content != null">
                    content = #{content},
                </if>
                <if test = "count != null">
                    count = #{count},
                </if>
                <if test = "catId != null">
                    cat_id = #{catId},
                </if>
                <if test = "sort != null">
                    sort = #{sort},
                </if>
                <if test = "status != null">
                    status = #{status},
                </if>
            </trim>
        </set>
    </sql>

    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from legend_course
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from legend_course
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.LIMIT" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from legend_course
        where id = #{id} and is_deleted = 'N'
    </select>

    <!-- 根据IDS批量查询 -->
    <select id = "selectByIds" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from legend_course
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        ) and is_deleted = 'N'
    </select>


    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update legend_course
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update legend_course
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update legend_course
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into legend_course (
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_INSERT_COLUMN" />
            <if test = "title != null">
                title,
            </if>
            <if test = "pic != null">
                pic,
            </if>
            <if test = "content != null">
                content,
            </if>
            <if test = "count != null">
                count,
            </if>
            <if test = "catId != null">
                cat_id,
            </if>
            <if test = "sort != null">
                sort,
            </if>
            <if test = "status != null">
                status,
            </if>
        </trim>
        )
        values (
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_INSERT_VALUE" />
            <if test = "title != null">
                #{title},
            </if>
            <if test = "pic != null">
                #{pic},
            </if>
            <if test = "content != null">
                #{content},
            </if>
            <if test = "count != null">
                #{count},
            </if>
            <if test = "catId != null">
                #{catId},
            </if>
            <if test = "sort != null">
                #{sort},
            </if>
            <if test = "status != null">
                #{status},
            </if>
        </trim>
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update legend_course
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>

    <insert id="batchInsert" parameterType="java.util.List">
        insert into legend_course (
        <trim suffix="" suffixOverrides=",">
            is_deleted,
            gmt_create,
            creator,
            gmt_modified,
            modifier,
            title,
            pic,
            content,
            count,
            cat_id,
            sort,
            status,
        </trim>
        )
        values

        <foreach collection="list" item="item" index="index" separator=",">
            (
            <trim suffix="" suffixOverrides=",">
                'N',
                <if test="item.gmtCreate != null">
                    #{item.gmtCreate},
                </if>
                <if test="item.gmtCreate == null">
                    now(),
                </if>
                <if test="item.creator != null">
                    #{item.creator},
                </if>
                <if test="item.creator == null">
                    0,
                </if>
                <if test="item.gmtModified != null">
                    #{item.gmtModified},
                </if>
                <if test="item.gmtModified == null">
                    now(),
                </if>
                <if test="item.creator != null">
                    #{item.creator},
                </if>
                <if test="item.creator == null">
                    0,
                </if>
                <if test="item.title != null">
                    #{item.title},
                </if>
                <if test="item.title == null">
                    NULL ,
                </if>
                <if test="item.pic != null">
                    #{item.pic},
                </if>
                <if test="item.pic == null">
                    NULL ,
                </if>
                <if test="item.content != null">
                    #{item.content},
                </if>
                <if test="item.content == null">
                    NULL ,
                </if>
                <if test="item.count != null">
                    #{item.count},
                </if>
                <if test="item.count == null">
                    0 ,
                </if>
                <if test="item.catId != null">
                    #{item.catId},
                </if>
                <if test="item.catId == null">
                    0 ,
                </if>
                <if test="item.sort != null">
                    #{item.sort},
                </if>
                <if test="item.sort == null">
                    0 ,
                </if>
                <if test="item.status != null">
                    #{item.status},
                </if>
                <if test="item.status == null">
                    0 ,
                </if>
            </trim>
            )
        </foreach>
    </insert>

</mapper> 
