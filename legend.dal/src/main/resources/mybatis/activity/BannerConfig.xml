<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.tqmall.legend.dao.activity.BannerConfigDao">

    <resultMap id = "BaseResultMap" type = "BannerConfig" extends = "COMMON.BASE_RESULT_MAP">
        <result column = "img_url" property = "imgUrl" />
        <result column = "jump_url" property = "jumpUrl" />
        <result column = "position" property = "position" />
        <result column = "sort" property = "sort" />
    </resultMap>

    <sql id = "BaseColumnList">
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_COLUMN_LIST" />
            img_url as imgUrl,
            jump_url as jumpUrl,
            position as position,
            sort as sort,
        </trim>
    </sql>

    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "imgUrl != null">
                    and img_url = #{imgUrl}
                </if>
                <if test = "jumpUrl != null">
                    and jump_url = #{jumpUrl}
                </if>
                <if test = "position != null">
                    and position = #{position}
                </if>
                <if test = "sort != null">
                    and sort = #{sort}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <trim suffix="" suffixOverrides=",">
                <include refid = "COMMON.BASE_UPDATE_SET" />
                <if test = "imgUrl != null">
                    img_url = #{imgUrl},
                </if>
                <if test = "jumpUrl != null">
                    jump_url = #{jumpUrl},
                </if>
                <if test = "position != null">
                    position = #{position},
                </if>
                <if test = "sort != null">
                    sort = #{sort},
                </if>
            </trim>
        </set>
    </sql>

    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from legend_banner_config
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from legend_banner_config
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.LIMIT" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from legend_banner_config
        where id = #{id} and is_deleted = 'N'
    </select>

    <!-- 根据IDS批量查询 -->
    <select id = "selectByIds" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from legend_banner_config
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        ) and is_deleted = 'N'
    </select>


    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update legend_banner_config
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update legend_banner_config
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update legend_banner_config
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into legend_banner_config (
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_INSERT_COLUMN" />
            <if test = "imgUrl != null">
                img_url,
            </if>
            <if test = "jumpUrl != null">
                jump_url,
            </if>
            <if test = "position != null">
                position,
            </if>
            <if test = "sort != null">
                sort,
            </if>
        </trim>
        )
        values (
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_INSERT_VALUE" />
            <if test = "imgUrl != null">
                #{imgUrl},
            </if>
            <if test = "jumpUrl != null">
                #{jumpUrl},
            </if>
            <if test = "position != null">
                #{position},
            </if>
            <if test = "sort != null">
                #{sort},
            </if>
        </trim>
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update legend_banner_config
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>

    <insert id="batchInsert" parameterType="java.util.List">
        insert into legend_banner_config (
        <trim suffix="" suffixOverrides=",">
            is_deleted,
            gmt_create,
            creator,
            gmt_modified,
            modifier,
            img_url,
            jump_url,
            position,
            sort,
        </trim>
        )
        values

        <foreach collection="list" item="item" index="index" separator=",">
            (
            <trim suffix="" suffixOverrides=",">
                'N',
                <if test="item.gmtCreate != null">
                    #{item.gmtCreate},
                </if>
                <if test="item.gmtCreate == null">
                    now(),
                </if>
                <if test="item.creator != null">
                    #{item.creator},
                </if>
                <if test="item.creator == null">
                    0,
                </if>
                <if test="item.gmtModified != null">
                    #{item.gmtModified},
                </if>
                <if test="item.gmtModified == null">
                    now(),
                </if>
                <if test="item.creator != null">
                    #{item.creator},
                </if>
                <if test="item.creator == null">
                    0,
                </if>
                <if test="item.imgUrl != null">
                    #{item.imgUrl},
                </if>
                <if test="item.imgUrl == null">
                    '',
                </if>
                <if test="item.jumpUrl != null">
                    #{item.jumpUrl},
                </if>
                <if test="item.jumpUrl == null">
                    '',
                </if>
                <if test="item.position != null">
                    #{item.position},
                </if>
                <if test="item.position == null">
                    0 ,
                </if>
                <if test="item.sort != null">
                    #{item.sort},
                </if>
                <if test="item.sort == null">
                    0 ,
                </if>
            </trim>
            )
        </foreach>
    </insert>

</mapper> 
