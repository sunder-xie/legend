<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.tqmall.legend.dao.goods.FinalInventoryDao">

    <resultMap id = "BaseResultMap" type = "FinalInventory" extends = "COMMON.BASE_RESULT_MAP">
        <result column = "shop_id" property = "shopId" />
        <result column = "goods_id" property = "goodsId" />
        <result column = "goods_count" property = "goodsCount" />
        <result column = "goods_final_price" property = "goodsFinalPrice" />
        <result column = "final_date" property = "finalDate" />
        <result column = "order_id" property = "orderId" />
        <result column = "inventory_type" property = "inventoryType" />
    </resultMap>

    <sql id = "BaseColumnList">
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_COLUMN_LIST" />
            shop_id as shopId,
            goods_id as goodsId,
            goods_count as goodsCount,
            goods_final_price as goodsFinalPrice,
            final_date as finalDate,
            order_id as orderId,
            inventory_type as inventoryType,
        </trim>
    </sql>

    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "shopId != null">
                    and shop_id = #{shopId}
                </if>
                <if test = "goodsId != null">
                    and goods_id = #{goodsId}
                </if>
                <if test = "goodsCount != null">
                    and goods_count = #{goodsCount}
                </if>
                <if test = "goodsFinalPrice != null">
                    and goods_final_price = #{goodsFinalPrice}
                </if>
                <if test = "finalDate != null">
                    and final_date = #{finalDate}
                </if>
                <if test = "orderId != null">
                    and order_id = #{orderId}
                </if>
                <if test = "inventoryType != null">
                    and inventory_type = #{inventoryType}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <trim suffix="" suffixOverrides=",">
                <include refid = "COMMON.BASE_UPDATE_SET" />
                <if test = "shopId != null">
                    shop_id = #{shopId},
                </if>
                <if test = "goodsId != null">
                    goods_id = #{goodsId},
                </if>
                <if test = "goodsCount != null">
                    goods_count = #{goodsCount},
                </if>
                <if test = "goodsFinalPrice != null">
                    goods_final_price = #{goodsFinalPrice},
                </if>
                <if test = "finalDate != null">
                    final_date = #{finalDate},
                </if>
                <if test = "orderId != null">
                    order_id = #{orderId},
                </if>
                <if test = "inventoryType != null">
                    inventory_type = #{inventoryType},
                </if>
            </trim>
        </set>
    </sql>

    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from legend_final_inventory
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from legend_final_inventory
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.LIMIT" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from legend_final_inventory
        where id = #{id} and is_deleted = 'N'
    </select>

    <!-- 根据IDS批量查询 -->
    <select id = "selectByIds" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from legend_final_inventory
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        ) and is_deleted = 'N'
    </select>


    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update legend_final_inventory
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update legend_final_inventory
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update legend_final_inventory
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into legend_final_inventory (
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_INSERT_COLUMN" />
            <if test = "shopId != null">
                shop_id,
            </if>
            <if test = "goodsId != null">
                goods_id,
            </if>
            <if test = "goodsCount != null">
                goods_count,
            </if>
            <if test = "goodsFinalPrice != null">
                goods_final_price,
            </if>
            <if test = "finalDate != null">
                final_date,
            </if>
            <if test = "orderId != null">
                order_id,
            </if>
            <if test = "inventoryType != null">
                inventory_type,
            </if>
        </trim>
        )
        values (
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_INSERT_VALUE" />
            <if test = "shopId != null">
                #{shopId},
            </if>
            <if test = "goodsId != null">
                #{goodsId},
            </if>
            <if test = "goodsCount != null">
                #{goodsCount},
            </if>
            <if test = "goodsFinalPrice != null">
                #{goodsFinalPrice},
            </if>
            <if test = "finalDate != null">
                #{finalDate},
            </if>
            <if test = "orderId != null">
                #{orderId},
            </if>
            <if test = "inventoryType != null">
                #{inventoryType},
            </if>
        </trim>
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update legend_final_inventory
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>

    <insert id="batchInsert" parameterType="java.util.List">
        insert into legend_final_inventory (
        <trim suffix="" suffixOverrides=",">
            is_deleted,
            gmt_create,
            creator,
            gmt_modified,
            modifier,
            shop_id,
            goods_id,
            goods_count,
            goods_final_price,
            final_date,
            order_id,
            inventory_type,
        </trim>
        )
        values

        <foreach collection="list" item="item" index="index" separator=",">
            (
            <trim suffix="" suffixOverrides=",">
                'N',
                <if test="item.gmtCreate != null">
                    #{item.gmtCreate},
                </if>
                <if test="item.gmtCreate == null">
                    now(),
                </if>
                <if test="item.creator != null">
                    #{item.creator},
                </if>
                <if test="item.creator == null">
                    0,
                </if>
                <if test="item.gmtModified != null">
                    #{item.gmtModified},
                </if>
                <if test="item.gmtModified == null">
                    now(),
                </if>
                <if test="item.creator != null">
                    #{item.creator},
                </if>
                <if test="item.creator == null">
                    0,
                </if>
                <if test="item.shopId != null">
                    #{item.shopId},
                </if>
                <if test="item.shopId == null">
                    0 ,
                </if>
                <if test="item.goodsId != null">
                    #{item.goodsId},
                </if>
                <if test="item.goodsId == null">
                    0 ,
                </if>
                <if test="item.goodsCount != null">
                    #{item.goodsCount},
                </if>
                <if test="item.goodsCount == null">
                    0.00,
                </if>
                <if test="item.goodsFinalPrice != null">
                    #{item.goodsFinalPrice},
                </if>
                <if test="item.goodsFinalPrice == null">
                    0.00,
                </if>
                <if test="item.finalDate != null">
                    #{item.finalDate},
                </if>
                <if test="item.finalDate == null">
                    '1970-01-01 12:00:00',
                </if>
                <if test="item.orderId != null">
                    #{item.orderId},
                </if>
                <if test="item.orderId == null">
                    0 ,
                </if>
                <if test="item.inventoryType != null">
                    #{item.inventoryType},
                </if>
                <if test="item.inventoryType == null">
                    '',
                </if>
            </trim>
            )
        </foreach>
    </insert>
    <!-- 通过ID更新 -->
    <update id = "updateGoodsFinalPriceById">
        update legend_final_inventory
        <include refid = "BaseUpdateSet" />
        where shop_id =#{shopId} and goods_id =#{goodsId} and is_deleted='N'
    </update>

</mapper>
